<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rhnx93kkpr8d"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bor_bottomsheet"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="wrap_content">
      <LinearLayout
          android:id="@+id/rkmwv5shar5"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:layout_margin="16dp"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/r3ccn9h0fbdg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Thanh toán"
              android:textColor="#181725"
              android:textSize="24sp"
              android:textStyle="bold" />

          <LinearLayout
              android:id="@+id/rzh9607iu77"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              android:orientation="vertical" />

          <ImageView
              android:id="@+id/imBack"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:clickable="true"
              android:focusable="true"
              android:scaleType="fitXY"
              android:src="@drawable/ic_remove" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/r7i3a2szqwsn"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#FFE2E2E2"
          android:gravity="center_horizontal"
          android:orientation="vertical"></LinearLayout>

      <LinearLayout
          android:id="@+id/r576lolptmv4"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginHorizontal="16dp"
          android:clickable="true"
          android:focusable="true"
          android:gravity="center_horizontal"
          android:orientation="vertical">

          <LinearLayout
              android:id="@+id/rp909wjbw11r"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:weightSum="10"
              android:gravity="center_vertical"
              android:orientation="horizontal">

              <TextView
                  android:id="@+id/rrylh91n00ha"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Địa chỉ"
                  android:textColor="#7C7C7C"
                  android:layout_weight="2"
                  android:textSize="18sp"
                  android:textStyle="bold" />

              <View
                  android:id="@+id/rjx1l83v04cg"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="3"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"/>

              <Spinner
                  android:id="@+id/spinnerCity"
                  android:background="@drawable/edit_text_border"
                  android:layout_width="0dp"
                  android:layout_weight="5"
                  android:layout_height="35dp"
                  android:prompt="@string/select_city"/>

          </LinearLayout>

          <LinearLayout
              android:id="@+id/r1azsmm1i50w"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#FFE2E2E2"
              android:gravity="center_horizontal"
              android:orientation="vertical"></LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ra5rlkkoosb"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginHorizontal="16dp"
          android:clickable="true"
          android:focusable="true"
          android:gravity="center_horizontal"
          android:orientation="vertical">

          <LinearLayout
              android:id="@+id/rau4gtb10y3m"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:orientation="horizontal">

              <TextView
                  android:id="@+id/rolwnw1gzzu"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tổng tiền"
                  android:textColor="#7C7C7C"
                  android:textSize="18sp"
                  android:textStyle="bold" />

              <LinearLayout
                  android:id="@+id/rp19593gvc0o"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"/>

              <TextView
                  android:id="@+id/tvSumPrice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginHorizontal="12dp"
                  android:text="$13.97"
                  android:textColor="#181725"
                  android:textSize="16sp"
                  android:textStyle="bold" />

          </LinearLayout>

          <LinearLayout
              android:id="@+id/r7a38m8vwc3"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#FFE2E2E2"
              android:gravity="center_horizontal"
              android:orientation="vertical"/>
      </LinearLayout>

      <TextView
          android:id="@+id/rldvap277srn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:layout_marginTop="16dp"
          android:text="Bằng cách đặt hàng, bạn đồng ý với chúng tôi"
          android:textColor="#7C7C7C"
          android:textSize="14sp" />

      <LinearLayout
          android:id="@+id/rybyrxu9pweg"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:layout_marginVertical="4dp"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/rpse0s47qpjh"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:focusable="true"
              android:text="Điều kiện"
              android:textColor="#181725"
              android:textSize="14sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/rqr2tm3164y"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="4dp"
              android:text="Và"
              android:textColor="#7C7C7C"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/rngfsrtgqg3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:focusable="true"
              android:text="Điều khoản"
              android:textColor="#181725"
              android:textSize="14sp"
              android:textStyle="bold" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/checkoutButton"
          android:layout_width="match_parent"
          android:layout_height="65dp"
          android:layout_margin="16dp"
          android:background="@drawable/bor_checkout"
          android:clickable="true"
          android:focusable="true"
          android:gravity="center"
          android:orientation="vertical">

          <TextView
              android:id="@+id/ru193p6dcfb"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Thanh toán khi nhận hàng"
              android:textColor="#FFF9FF"
              android:textSize="18sp"
              android:textStyle="bold" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <com.paypal.checkout.paymentbutton.PaymentButtonContainer
              android:id="@+id/payment_button_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:paypal_button_color="silver"
              app:paypal_button_label="pay"
              app:paypal_button_shape="rectangle"
              android:layout_centerInParent="true"
              app:paypal_button_size="large"
              app:paypal_button_enabled="true" />
      </LinearLayout>
  </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</FrameLayout>
