<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/cBg"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".view.screen.MyDetail.MydetailActivity">

    <ProgressBar
        android:id="@+id/progress_circular"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cChinh"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgbackprofile_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_back_24" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:gravity="start"
            android:text="Đổi thông tin"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="20dp"

        >


        <ImageView
            android:id="@+id/imgprofiledetail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_inputUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:endIconMode="clear_text"
            app:hintEnabled="false"
            android:enabled="false"
            app:startIconDrawable="@drawable/ic_person">

            <EditText

                android:id="@+id/edtusernameprofile_detail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_edt_login_noselect"
                android:hint="Tài khoản"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:endIconMode="clear_text"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_email">

            <EditText
                android:id="@+id/edtemailprofile_detail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_edt_login_noselect"
                android:hint="Email" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:endIconMode="clear_text"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_baseline_phone_24">

            <EditText
                android:id="@+id/edtphoneprofile_detail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_edt_login_noselect"
                android:hint="Số điện thoại"
                android:inputType="textPhonetic" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:endIconMode="clear_text"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_person_outline_24">

            <EditText
                android:id="@+id/edtnameprofile_detail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_edt_login_noselect"
                android:hint="Họ và tên"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnupdate_profile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_btn_gree"
            android:text="Thay đổi"
            app:layout_constraintEnd_toEndOf="parent"
          />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>